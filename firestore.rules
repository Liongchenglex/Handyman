rules_version = '2';

/**
 * TEMPORARY DEMO RULES - ALLOW ALL ACCESS
 *
 * ⚠️ WARNING: These rules allow unrestricted access!
 * ⚠️ RESTORE firestore.rules.backup after demo
 *
 * To restore after demo:
 * 1. Run: cp firestore.rules.backup firestore.rules
 * 2. Deploy: firebase deploy --only firestore:rules
 */

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all read and write access to all collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
