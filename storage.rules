rules_version = '2';

/**
 * TEMPORARY DEMO RULES - ALLOW ALL ACCESS
 *
 * ⚠️ WARNING: These rules allow unrestricted access!
 * ⚠️ RESTORE storage.rules.backup after demo
 *
 * To restore after demo:
 * 1. Run: cp storage.rules.backup storage.rules
 * 2. Deploy: firebase deploy --only storage
 */

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all read and write access to all storage paths
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
